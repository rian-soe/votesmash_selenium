{
  "name": "selenium_js",
  "version": "1.0.0",
  "description": "Selenium WebDriver tests for VoteSmash application",
  "main": "runAllTests.js",
  "scripts": {
    "test": "node runAllTests.js",                       
    "test:headless": "HEADLESS=true node runAllTests.js", 
    "test:ci": "CI=true HEADLESS=true node runAllTests.js", 
    "test:docker": "docker-compose up --build --abort-on-container-exit",
    "test:docker:clean": "docker-compose down -v && docker-compose up --build --abort-on-container-exit",
    "start": "node runAllTests.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },

  "keywords": [
    "selenium",
    "webdriver",
    "testing",
    "automation",
    "ci-cd"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "mysql2": "^3.14.1",
    "selenium-webdriver": "^4.30.0",
    "tunnel-ssh": "^5.2.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "mocha": "^11.7.2"
  }
}
